@model Rocket_Admin.Models.User

@{
    ViewBag.Title = "Index";
}


@section sidebar
{
    <!-- 左選 -->
    <div class="sidebar"
         data-background-color="white"
         data-active-color="danger">
        <div class="sidebar-wrapper">
            <div class="logo">
                <a href="/Areas/Users/Index" class="simple-text">
                    火箭隊
                </a>
            </div>
            <ul class="nav">
                <li>
                    <a href="/Areas/Students/Index">
                        <i class="ti-user"></i>
                        <p>學員管理</p>
                    </a>
                </li>
                <li>
                    <a href="/Areas/Classes/Index">
                        <i class="ti-book"></i>
                        <p>梯次管理</p>
                    </a>
                </li>
                <li class="active">
                    <a href="/Areas/Users/Index">
                        <i class="ti-lock"></i>
                        <p>密碼修改</p>
                    </a>
                </li>
            </ul>
        </div>
    </div>


}

@section topbar{
    <a class="navbar-brand" href="/Areas/Students/Index">修改密碼</a>

}



<!-- 內容 -->
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 news_list">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">密碼修改</h4>
                    </div>
                    <div class="card-content">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.Id)



                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>請輸入舊密碼</label>
                                            <input type="password"
                                                   required
                                                   class="form-control border-input" name="oldPassword" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>請輸入新密碼</label>
                                            <input type="password"
                                                   required
                                                   class="form-control border-input" name="newPassword" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>請再次輸入新密碼</label>
                                            <input type="password"
                                                   required
                                                   class="form-control border-input" name="newPassword2" />
                                        </div>
                                    </div>
                                </div>
                                <div class="text-center">
                                    <button type="submit"
                                            class="btn btn-info btn-fill btn-wd">
                                        修改密碼
                                    </button>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





@section model {
    <!-- 新增 Modal -->
    <div class="modal fade add_class"
         id="add_class"
         tabindex="-1"
         role="dialog"
         aria-labelledby="add_class"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="add_class">
                        新增梯次
                        <button type="button"
                                class="close"
                                data-dismiss="modal"
                                aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </h5>
                </div>
                <div class="modal-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>梯次</label>
                                    <input type="number"
                                           class="form-control border-input"
                                           value="" />
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>初始日期</label>
                                    <input type="date"
                                           class="form-control border-input"
                                           value="" />
                                    <small>(第一次填寫ORID的那個禮拜一)</small>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>結訓日期</label>
                                    <input type="date"
                                           class="form-control border-input"
                                           value="" />
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button"
                            class="btn btn-secondary"
                            data-dismiss="modal">
                        取消
                    </button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal">儲存</button>
                </div>
            </div>
        </div>
    </div>
    <!-- 新增 Modal結束 -->


}